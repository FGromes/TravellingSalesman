<UserControl x:Class="TravellingSalesman.MVVM.View.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravellingSalesman.MVVM.View"
             xmlns:viewModel="clr-namespace:TravellingSalesman.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:MainViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" 
                    Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <!-- Left Side ===== Grid Row 0 -->
                <Label Grid.Row="0" Grid.Column="0" 
                       Content="Start:"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          Width="100"
                          ItemsSource="{Binding MapPoints}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding Start}">
                </ComboBox>


                <!-- Left Side ===== Grid Row 1 -->
                <Label Grid.Row="1" Grid.Column="0" 
                       Content="End:"/>
                <ComboBox Grid.Row="1" Grid.Column="1" 
                          Width="100"
                          ItemsSource="{Binding MapPoints}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding End}">
                </ComboBox>


                <!-- Left Side ===== Grid Row 2 -->
                <Button Grid.Row="2" Grid.ColumnSpan="2" 
                        Content="Calculate"
                        Command="{Binding CalculateCmd}"/>
            </Grid>
        </StackPanel>


        <Image Grid.Column="1" 
               Width="auto"/>


        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0"
                      ItemsSource="{Binding MapPoints}" 
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedPoint}"/>
            <StackPanel Grid.Row="1">
                <Button Content="New Point"
                        Command="{Binding AddNewPoint}"/>
                <Button Content="Delete Point"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
